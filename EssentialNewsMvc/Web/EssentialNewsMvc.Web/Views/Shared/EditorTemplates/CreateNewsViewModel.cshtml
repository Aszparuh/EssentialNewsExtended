@model EssentialNewsMvc.Web.ViewModels.News.CreateNewsViewModel

@using (Html.BeginForm("Create", "News", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group row">
            <div class="col-md-12">
                @Html.LabelFor(Model => Model.Title, new { @class = "control-label" })
                @Html.EditorFor(Model => Model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(Model => Model.Title, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-12">
                <div>
                    @Html.CheckBoxFor(Model => Model.IsTop)
                    @Html.LabelFor(Model => Model.IsTop, new { @class = "control-label" })
                </div>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-1">
                @Html.LabelFor(model => Model.NewsCategoryId, new { @class = "control-label" })
            </div>
            <div class="col-md-3">
                @Html.DropDownListFor(Model => Model.NewsCategoryId, Model.NewsCategories, string.Empty, new { @class = "form-control btn btn-default" })
                @Html.ValidationMessageFor(Model => Model.NewsCategoryId, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-1">
                @Html.LabelFor(Model => Model.RegionId, new { @class = "control-label" })
            </div>
            <div class="col-md-3">
                @Html.DropDownListFor(Model => Model.RegionId, Model.Regions, string.Empty, new { @class = "form-control btn btn-default" })
                @Html.ValidationMessageFor(Model => Model.RegionId, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-3">
                @Html.TextBoxFor(Model => Model.Upload, new { title = "Upload Image", type = "file" })
                @*<input type="file" title="Upload Image" name="upload">*@
                @Html.ValidationMessageFor(Model => Model.Upload, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-12">
                @Html.TextAreaFor(Model => Model.Content, new { @class = "ckeditor", id = "editor1" })
                @Html.ValidationMessageFor(Model => Model.Content, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-12">
                @Html.LabelFor(Model => Model.SampleContent, new { @class = "control-label" })
                @Html.TextAreaFor(Model => Model.SampleContent, new { @class = "form-control", placeholder = "First sentences of the article or subtitle" })
                @Html.ValidationMessageFor(Model => Model.SampleContent, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}
